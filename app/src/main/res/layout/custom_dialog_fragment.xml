<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Please select the cup"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/cup1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="32dp"
        android:padding="10dp"
        android:src="@drawable/ml100"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/cup2"
        app:layout_constraintTop_toTopOf="@id/title" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="100 ml"
        android:textColor="#00ACC1"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/cup4"
        app:layout_constraintLeft_toLeftOf="@id/cup1"
        app:layout_constraintRight_toRightOf="@id/cup1"
        app:layout_constraintTop_toBottomOf="@id/cup1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="150 ml"
        android:textColor="#00ACC1"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/cup4"
        app:layout_constraintLeft_toLeftOf="@id/cup2"
        app:layout_constraintRight_toRightOf="@id/cup2"
        app:layout_constraintTop_toBottomOf="@id/cup2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="200 ml"
        android:textColor="#00ACC1"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/cup4"
        app:layout_constraintLeft_toLeftOf="@id/cup3"
        app:layout_constraintRight_toRightOf="@id/cup3"
        app:layout_constraintTop_toBottomOf="@id/cup3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="250 ml"
        android:textColor="#00ACC1"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@id/cup4"
        app:layout_constraintRight_toRightOf="@id/cup4"
        app:layout_constraintTop_toBottomOf="@id/cup4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="300 ml"
        android:textColor="#00ACC1"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@id/cup5"
        app:layout_constraintRight_toRightOf="@id/cup5"
        app:layout_constraintTop_toBottomOf="@id/cup5" />

    <TextView
        android:id="@+id/text500ml"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="500 ml"
        android:textColor="#00ACC1"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@id/cup6"
        app:layout_constraintRight_toRightOf="@id/cup6"
        app:layout_constraintTop_toBottomOf="@id/cup6" />

    <ImageView
        android:id="@+id/cup1Back"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="#80FFFFFF"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@id/cup1"
        app:layout_constraintLeft_toLeftOf="@id/cup1"
        app:layout_constraintRight_toRightOf="@id/cup1"
        app:layout_constraintTop_toTopOf="@id/cup1" />

    <ImageView
        android:id="@+id/cup2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="32dp"
        android:padding="10dp"
        android:src="@drawable/ml200"
        app:layout_constraintLeft_toRightOf="@id/cup1"
        app:layout_constraintRight_toLeftOf="@id/cup3"
        app:layout_constraintTop_toTopOf="@id/title" />

    <ImageView
        android:id="@+id/cup2Back"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="#80FFFFFF"
        app:layout_constraintBottom_toBottomOf="@id/cup2"
        app:layout_constraintLeft_toLeftOf="@id/cup2"
        app:layout_constraintRight_toRightOf="@id/cup2"
        app:layout_constraintTop_toTopOf="@id/cup2" />

    <ImageView
        android:id="@+id/cup3Back"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:elevation="4dp"
        android:src="#80FFFFFF"
        app:layout_constraintBottom_toBottomOf="@id/cup3"
        app:layout_constraintLeft_toLeftOf="@id/cup3"
        app:layout_constraintRight_toRightOf="@id/cup3"
        app:layout_constraintTop_toTopOf="@id/cup3" />

    <ImageView
        android:id="@+id/cup4Back"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:elevation="4dp"
        android:src="#80FFFFFF"
        app:layout_constraintBottom_toBottomOf="@id/cup4"
        app:layout_constraintLeft_toLeftOf="@id/cup4"
        app:layout_constraintRight_toRightOf="@id/cup4"
        app:layout_constraintTop_toTopOf="@id/cup4" />

    <ImageView
        android:id="@+id/cup5Back"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:elevation="4dp"
        android:src="#80FFFFFF"
        app:layout_constraintBottom_toBottomOf="@id/cup5"
        app:layout_constraintLeft_toLeftOf="@id/cup5"
        app:layout_constraintRight_toRightOf="@id/cup5"
        app:layout_constraintTop_toTopOf="@id/cup5" />

    <ImageView
        android:id="@+id/cup6Back"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:elevation="4dp"
        android:src="#80FFFFFF"
        app:layout_constraintBottom_toBottomOf="@id/cup6"
        app:layout_constraintLeft_toLeftOf="@id/cup6"
        app:layout_constraintRight_toRightOf="@id/cup6"
        app:layout_constraintTop_toTopOf="@id/cup6" />

    <ImageView
        android:id="@+id/cup3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="32dp"
        android:padding="10dp"
        android:src="@drawable/ml300"
        app:layout_constraintLeft_toRightOf="@id/cup2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/title" />

    <ImageView
        android:id="@+id/cup4"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="32dp"
        android:padding="10dp"
        android:src="@drawable/ml400"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/cup2"
        app:layout_constraintTop_toBottomOf="@id/cup1" />

    <ImageView
        android:id="@+id/cup5"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="32dp"
        android:padding="10dp"
        android:src="@drawable/ml500"
        app:layout_constraintLeft_toRightOf="@id/cup1"
        app:layout_constraintRight_toLeftOf="@id/cup3"
        app:layout_constraintTop_toBottomOf="@id/cup1" />

    <ImageView
        android:id="@+id/cup6"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="32dp"
        android:padding="1dp"
        android:src="@drawable/cup500"
        app:layout_constraintLeft_toRightOf="@id/cup2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cup1" />

    <TextView
        android:id="@+id/select"
        android:layout_width="120dp"
        android:layout_height="44dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/selectdrawable"
        android:gravity="center"
        android:text="Select"
        android:layout_marginRight="24dp"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintRight_toRightOf="@id/cup6"
        app:layout_constraintTop_toBottomOf="@id/text500ml" />

    <TextView
        android:id="@+id/cancel"
        android:layout_width="120dp"
        android:layout_height="44dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:gravity="center"
        android:text="Cancel"
        android:textColor="#00E3FF"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintRight_toLeftOf="@id/select"
        app:layout_constraintTop_toBottomOf="@id/text500ml" />
    <Space
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@id/cancel"
        android:layout_height="20dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>