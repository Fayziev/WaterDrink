<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/img1"
        android:layout_width="55dp"
        android:layout_height="45dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/backspace"
        android:backgroundTint="#499BE1"
        android:rotation="180"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/img2"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img2"
        android:layout_width="55dp"
        android:layout_height="45dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/backspace"
        android:backgroundTint="#C1C1C1"
        android:rotation="180"
        app:layout_constraintLeft_toRightOf="@id/img1"
        app:layout_constraintRight_toLeftOf="@id/img3"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Male"
        app:layout_constraintLeft_toLeftOf="@id/img1"
        app:layout_constraintRight_toRightOf="@id/img1"
        app:layout_constraintTop_toBottomOf="@id/img1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="__"
        app:layout_constraintLeft_toLeftOf="@id/img2"
        app:layout_constraintRight_toRightOf="@id/img2"
        app:layout_constraintTop_toBottomOf="@id/img2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="__"
        app:layout_constraintLeft_toLeftOf="@id/img3"
        app:layout_constraintRight_toRightOf="@id/img3"
        app:layout_constraintTop_toBottomOf="@id/img3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="__"
        app:layout_constraintLeft_toLeftOf="@id/img4"
        app:layout_constraintRight_toRightOf="@id/img4"
        app:layout_constraintTop_toBottomOf="@id/img4" />

    <ImageView
        android:id="@+id/img3"
        android:layout_width="55dp"
        android:layout_height="45dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/backspace"
        android:backgroundTint="#C1C1C1"
        android:rotation="180"
        app:layout_constraintLeft_toRightOf="@id/img2"
        app:layout_constraintRight_toLeftOf="@id/img4"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img4"
        android:layout_width="55dp"
        android:layout_height="45dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/backspace"
        android:backgroundTint="#C1C1C1"
        android:rotation="180"
        app:layout_constraintLeft_toRightOf="@id/img3"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:src="@drawable/ic_moon"
        app:layout_constraintBottom_toBottomOf="@id/img4"
        app:layout_constraintLeft_toLeftOf="@id/img4"
        app:layout_constraintRight_toRightOf="@id/img4"
        app:layout_constraintTop_toTopOf="@id/img4" />

    <ImageView
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:src="@drawable/ic_alarm_clock"
        app:layout_constraintBottom_toBottomOf="@id/img3"
        app:layout_constraintLeft_toLeftOf="@id/img3"
        app:layout_constraintRight_toRightOf="@id/img3"
        app:layout_constraintTop_toTopOf="@id/img3" />

    <ImageView
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:src="@drawable/ic_weight"
        app:layout_constraintBottom_toBottomOf="@id/img2"
        app:layout_constraintLeft_toLeftOf="@id/img2"
        app:layout_constraintRight_toRightOf="@id/img2"
        app:layout_constraintTop_toTopOf="@id/img2" />

    <ImageView
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:src="@drawable/ic_genderr"
        app:layout_constraintBottom_toBottomOf="@id/img1"
        app:layout_constraintLeft_toLeftOf="@id/img1"
        app:layout_constraintRight_toRightOf="@id/img1"
        app:layout_constraintTop_toTopOf="@id/img1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Gender"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias=".2" />

    <ImageView
        android:id="@+id/boy"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:src="@drawable/boy_circle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/girl"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias=".45" />

    <TextView
        android:id="@+id/male"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Male"
        android:textColor="#3BA1FE"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="@id/boy"
        app:layout_constraintRight_toRightOf="@id/boy"
        app:layout_constraintTop_toBottomOf="@id/boy" />

    <TextView
        android:id="@+id/female"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Female"
        android:textColor="#D6D6D6"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="@id/girl"
        app:layout_constraintRight_toRightOf="@id/girl"
        app:layout_constraintTop_toBottomOf="@id/girl" />

    <ImageView
        android:id="@+id/girl"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:src="@drawable/ic_girl__1_"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/boy"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias=".45" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/girlTransparent"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:src="#66FFFFFF"
        app:layout_constraintBottom_toBottomOf="@id/girl"
        app:layout_constraintLeft_toLeftOf="@id/girl"
        app:layout_constraintRight_toRightOf="@id/girl"
        app:layout_constraintTop_toTopOf="@id/girl" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/boyTransparent"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:src="#66FFFFFF"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/boy"
        app:layout_constraintLeft_toLeftOf="@id/boy"
        app:layout_constraintRight_toRightOf="@id/boy"
        app:layout_constraintTop_toTopOf="@id/boy" />

    <TextView
        android:id="@+id/nextBtn"
        android:layout_width="120dp"
        android:layout_height="56dp"
        android:layout_margin="32dp"
        android:background="@drawable/draw"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:text="Next"
        android:textColor="@color/white"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/backCircle"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_margin="32dp"
        android:background="?android:selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:src="#CC03A9F4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <ImageView
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:clickable="false"
        android:focusable="false"
        android:src="@drawable/ic_baseline_chevron_left_24"
        app:layout_constraintBottom_toBottomOf="@id/backCircle"
        app:layout_constraintLeft_toLeftOf="@id/backCircle"
        app:layout_constraintRight_toRightOf="@id/backCircle"
        app:layout_constraintTop_toTopOf="@id/backCircle" />

</androidx.constraintlayout.widget.ConstraintLayout>